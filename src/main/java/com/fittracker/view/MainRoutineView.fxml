<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittracker.view.AddRoutineController">
    <Text text="Ajouter une Routine" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="routineNameField" promptText="Nom de la routine" />
    <Button text="Ajouter" onAction="#addRoutine" />
    <Button text="Retour" onAction="#goBack" />
</VBox>

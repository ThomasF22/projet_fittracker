<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittracker.view.RemoveExerciseController">
    <Text text="Retirer un Exercice d'une Routine" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="routineIdField" promptText="ID de la routine" />
    <TextField fx:id="exerciseIdField" promptText="ID de l'exercice" />
    <Button text="Retirer" onAction="#removeExercise" />
    <Button text="Retour" onAction="#goBack" />
</VBox>

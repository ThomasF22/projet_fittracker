<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittracker.controller.WorkoutSessionController">    
    <TableView fx:id="exerciseTableView">
        <columns>
            <TableColumn text="Exercice" fx:id="exerciseColumn"/>
            <TableColumn text="Poids" fx:id="weightColumn"/>
            <TableColumn text="Reps" fx:id="repsColumn"/>
            <TableColumn text="Durée" fx:id="durationColumn"/>
        </columns>
    </TableView>

    <Button text="Terminer la séance" onAction="#handleEndSession"/>
</VBox>
